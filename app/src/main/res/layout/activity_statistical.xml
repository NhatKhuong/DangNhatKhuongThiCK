<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistical">

    <EditText
        android:id="@+id/txtTenKhoaHocInput"
        android:layout_width="364dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Năm thống kê"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtThoiLuongInput"
        android:layout_width="364dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Tháng thống kê"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtTenKhoaHocInput"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtTenKhoaHocInput"
        app:layout_constraintTop_toBottomOf="@+id/txtTenKhoaHocInput" />

    <Button
        android:id="@+id/btnAdd_careers"
        android:layout_width="365dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#C1C33F"
        android:text="Thống kê)"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtThoiLuongInput"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtThoiLuongInput"
        app:layout_constraintTop_toBottomOf="@+id/txtThoiLuongInput"></Button>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Số khóa học Skills"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/btnAdd_careers"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd_careers" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Số khóa học Careers"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />


</androidx.constraintlayout.widget.ConstraintLayout>